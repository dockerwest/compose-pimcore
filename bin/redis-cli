#!/usr/bin/env python3

import os
import sys
import subprocess
import re
from environment import Environment

currentpath = os.getcwd()
composepath = os.path.abspath(os.path.dirname(sys.argv[0]) + '/../')

env = Environment(composepath + '/.env')

cmd = [
    os.path.dirname(sys.argv[0]) + '/run',
    'ps', 'redis'
]

p = subprocess.Popen(cmd, stdout=subprocess.PIPE)
try:
    p.wait()
except KeyboardInterrupt:
    try:
        p.terminate()
    except OSError:
        pass
    p.wait()
out, err = p.communicate()
out = out.decode('utf-8')

if not re.search('Up', out):
    raise Exception('We need a running redis server')

dockerrun = [os.path.dirname(sys.argv[0]) + '/run', 'exec']
if not sys.stdin.isatty():
    dockerrun += ['-T']

cmd = dockerrun + [
    'redis', 'redis-cli'
] + sys.argv[1:]

p = subprocess.Popen(cmd)
try:
    p.wait()
except KeyboardInterrupt:
    try:
        p.terminate()
    except OSError:
        pass
    p.wait()

p.communicate()
sys.exit(p.returncode)
